{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "animatek/theme",
    "description": "Tema WordPress de Animatek impulsado por Tailwind CSS.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Javier Melgar",
            "email": "info@animatek.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "TailPress\\": "src/"
        }
    },
    "require": {
        "php": ">=8.0.2",
        "tailpress/framework": "^5.0.4",
        "automattic/jetpack-autoloader": "^2.10"
    },
    "require-dev": {
        "tailpress/cli": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "automattic/jetpack-autoloader": true
        }
    }
}
